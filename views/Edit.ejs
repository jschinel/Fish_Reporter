<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head.ejs')%>
    <link rel="stylesheet" href="/styles/addform.css">
</head>

<body>
    <div class = "StickyTop">
        <%-include('./partials/top.ejs')%>
        </div>
    <main class ='itemList'>
        <form action='/Location/UpdateEdit/<%=singleItem[0].id%>' method="POST">
            <label for="Location_Type">Location Type</label>
            <input type="String" name="Location_Type" id="Location_Type" value="<%=singleItem[0].Location_Type%>">
            <label for="Name">Name</label>
            <input type="String" name="Name" id="Name" value="<%=singleItem[0].Name%>">
            <label for="City">City</label>
            <input type="String" name="City" id="City" value="<%=singleItem[0].City%>">
            <label for="Fish">Fish</label>
            <input type="String" name="Fish" id="Fish" value="<%=singleItem[0].Fish%>">
            <label for="Fish_Caught">Fish Caught</label>
            <input type="Number" name="Fish_Caught" id="Fish_Caught" min="0" value="<%=singleItem[0].Fish_Caught%>">
            <label for="">Picture</label>
            <input type="String" name="Picture" id="Picture" Value="<%=singleItem[0].Picture%>">
            <input class = "submit" type="submit" value="Submit">
        </form>
    </main>
</body>

